{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier"],
  "plugins": ["@typescript-eslint", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // Prettier integration
    "prettier/prettier": "error",

    // TypeScript specific rules
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "warn",

    // React specific rules
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/display-name": "error",
    "react/jsx-key": "error",
    "react/self-closing-comp": "error",

    // General JavaScript/TypeScript rules
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-unused-vars": "off",
    "no-undef": "off",
    "eqeqeq": "error",
    "curly": "off",
    "no-useless-escape": "off"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    },
    {
      "files": ["*.config.js", "*.config.ts", "next.config.js"],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    },
    {
      "files": ["app/insights/**/*.tsx"],
      "rules": {
        "react/no-unescaped-entities": "off"
      }
    },
    {
      "files": ["lib/n8n-chat-service.ts"],
      "rules": {
        "prettier/prettier": "off"
      }
    },
    {
      "files": ["app/services/page.tsx"],
      "rules": {
        "prettier/prettier": "off"
      }
    },
    {
      "files": [
        "lib/optimized-firebase-chat-service.ts",
        "lib/quick-responses.ts",
        "lib/response-cache.ts"
      ],
      "rules": {
        "prettier/prettier": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": [
        "components/chat/enhanced-chat-widget.tsx",
        "components/chat/enhanced-message-manager.ts",
        "lib/firebase-chat-service.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["lib/firebase-*.ts"],
      "rules": {
        "no-unreachable": "off"
      }
    },
    {
      "files": ["app/portfolio/**/*.tsx", "app/portfolio/**/*.ts"],
      "rules": {
        "prettier/prettier": "off"
      }
    },
    {
      "files": [
        "components/layout/video-entrance.tsx",
        "components/layout/entrance-provider.tsx"
      ],
      "rules": {
        "prettier/prettier": "off",
        "no-console": "off"
      }
    }
  ]
}
