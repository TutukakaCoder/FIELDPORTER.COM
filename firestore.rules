rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Client portal data (future expansion)
    match /client_data/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project documents (future expansion) - only authenticated users can access their projects
    match /projects/{projectId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.authorized_users;
    }
    
    // Chat sessions - authenticated users can only access their own sessions
    match /chat_sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.user_id || 
         request.auth.uid == request.resource.data.user_id);
    }
    
    // AI chat conversations - allow public write for anonymous users, read for authenticated
    match /ai_conversations/{conversationId} {
      allow write: if true; // Allow anonymous chat
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.user_id || 
         resource.data.is_public == true);
    }
    
    // Conversations collection used by chatbot API - FULL ACCESS
    match /conversations/{document=**} {
      allow read, write: if true;
    }
    
    // NEW: conversations_v2 collection used by optimized chat service - FULL ACCESS  
    match /conversations_v2/{document=**} {
      allow read, write: if true;
    }
    
    // NEW: chat_sessions collection used by optimized chat service - FULL ACCESS
    match /chat_sessions/{document=**} {
      allow read, write: if true;
    }
    
    // Analytics data - allow public write for chatbot tracking - FULL ACCESS
    match /analytics/{document=**} {
      allow read, write: if true; // Allow chatbot to read/write analytics
    }
    
    // Leads collection for chatbot qualification - FULL ACCESS
    match /leads/{document=**} {
      allow read, write: if true; // Allow chatbot to read/write leads
    }
    
    // Chatbot specific collections - FULL ACCESS
    match /chatbot_analytics/{document=**} {
      allow read, write: if true;
    }
    
    match /chatbot_conversations/{document=**} {
      allow read, write: if true;
    }
    
    match /chatbot_sessions/{document=**} {
      allow read, write: if true;
    }
    
    // Public read access to company information
    match /company_info/{document=**} {
      allow read: if true;
      allow write: if false; // Only admins via backend
    }
    
    // Newsletter subscriptions - public write, read allowed for duplicate checking
    match /newsletter_subscriptions/{document=**} {
      allow write: if true;
      allow read: if true; // Allow read for duplicate email checking
    }
    
    // Contact form submissions - public write, no read access
    match /contact_submissions/{document=**} {
      allow write: if true;
      allow read: if false;
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 