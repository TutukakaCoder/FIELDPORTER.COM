# FIELDPORTER Environment Configuration
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Firebase Client Configuration (Public - for client-side Firebase SDK)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Admin SDK (Server-side - REQUIRED for API routes)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_PROJECT_ID=your_project_id_here

# DeepSeek AI (Primary AI Provider - REQUIRED)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Email Notifications (Primary notification method - REQUIRED)
RESEND_API_KEY=your_resend_api_key_here
NOTIFICATION_EMAIL=freddy@fieldporter.com

# Optional AI Providers (Fallback options)
OPENAI_API_KEY=your_openai_api_key_here

# External Chat Service (Optional - if using n8n or other external service)
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/fieldporter-chat

# Firebase Notification Webhook (Optional fallback method)
NOTIFICATION_WEBHOOK_URL=your_webhook_service_url_here

# Microsoft Graph API (Optional - for enhanced email notifications)
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=your_tenant_id_here

# Fallback Notifications (Optional webhook for backup notifications)
FALLBACK_WEBHOOK_URL=your_fallback_webhook_url_here

# Security (Optional encryption key for sensitive data)
NEXT_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# Development Environment
ANALYZE=false
